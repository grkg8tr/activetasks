# Bundle edge Rails instead:
#gem 'gizmo', :git => 'git://github.com/codescratch/gizmo.git'

gem 'gizmo', :path => '../gizmo'


gem "mongoid"
gem 'jquery-rails'
gem 'warbler'

# Gems used only for assets and not required
